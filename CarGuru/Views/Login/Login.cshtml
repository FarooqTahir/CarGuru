@model CarGuru.Database.Dtos.RequestDto.LoginRequestDto
@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login Page</title>
      <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">


    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">


    <style>

        .loginPage {
            -ms-flex-align: center;
            align-items: center;
            background: #e9ecef;
            display: -ms-flexbox;
            display: flex;
            -ms-flex-direction: column;
            flex-direction: column;
            height: 100vh;
            -ms-flex-pack: center;
            justify-content: center;
        }

        .card {
            height: 390px;
            width: 500px;
        }


        .input-group-prepend span {
            width: 50px;
            background-color: #28a745 !important;
            color: #ffffff;
            border: 0 !important;
        }

        input:focus {
            outline: 0 0 0 0 !important;
            box-shadow: 0 0 0 0 !important;
        }

        .login_btn {
            background-color: #28a745 !important;
            color: #ffffff;
        }


            .remember input {
                width: 20px;
                height: 20px;
                margin-left: 15px;
                margin-right: 5px;
            }

        /*.login_btn {
            color: black;
            background-color: #FFC312;
            width: 100px;
        }*/

        /*.login_btn:hover {
                color: black;
                background-color: white;
            }*/

        .bg-colorBlack {
            background-color: #28a745 !important;
            color: #ffffff;
        }

        .links a {
            margin-left: 4px;
        }
            .footerText{
                    color: #ffffff !important;
            }

            @@media only screen and (max-width: 540px) {
                .card {
                    height: 390px;
                    width: 400px;
                }
            }
    </style>
</head>
<body class="loginPage">

    <div class="content">
        <div class="container-fluid">
         
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header bg-colorBlack">
                            <h3>Sign In</h3>
                        </div>
                        <div class="card-body">
                            <form asp-action="Login" asp-controller="Login" method="post" asp-route-returnUrl="@ViewBag.ReturnUrl">
                                <div class="input-group form-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                                    </div>
                                    <input type="text" class="form-control" asp-for="Email" placeholder="username">

                                </div>
                                <div class="input-group form-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-key"></i></span>
                                    </div>
                                    <input type="password" asp-for="Password" class="form-control" placeholder="password">
                                </div>
                                <div class="row align-items-center remember">
                                    <input type="checkbox">Remember Me
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn float-right login_btn">
                                    Sign In</button>
                                   
                                </div>
                            </form>
                        </div>
                        <div class="card-footer bg-colorBlack">
                            <div class="d-flex justify-content-center links">
                                Don't have an account?<a asp-action="SignUp" asp-controller="Login" class="footerText">Sign Up</a>
                            </div>
                            <div class="d-flex justify-content-center">
                                <a href="#" class="footerText">Forgot your password?</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
