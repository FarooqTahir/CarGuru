    <script>

        let addVehicleForm = ` <div class="row">

                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label for="exampleInputEmail1">Licence Plate No.</label>
                                                            <input type="text" class="form-control" id="" placeholder="Enter Licence Plate No.">
                                                        </div>
